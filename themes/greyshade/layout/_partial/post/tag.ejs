<%
   var attr = '';
   if(type =="archive") {
     attr = 'span';
   } else if (type == "index") {
     attr = 'div';
   } %>
<% if(item.tags && item.tags.length) { %>
 <%
  var tags = [];
  item.tags.forEach(function(tag){
    if(tag.name)
      tags.push('<a href="' + config.root + tag.path + '">' + tag.name + '</a>');
  });
 %>
 <% if(tags.length) { %>
  <<%- attr %> class="tags">
    <%- tags.join(', ') %>
  </<%- attr %>>
 <% } %>
<% } %>
